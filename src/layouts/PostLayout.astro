---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";

const { title, description, pubDate, category, imageSrc, imageAlt } =
  Astro.props;
---

<BaseLayout {title} {description}>
  <main class="wrapper">
    <article>
      <h1>{title}</h1>
      <Image
        src={imageSrc}
        alt={imageAlt}
        width={1400}
        quality="high"
        class="post-hero-img shadow"
      />
      <div class="prose">
        <slot />
      </div>
    </article>
  </main>
</BaseLayout>

<style>
  main {
    margin-block: 2em;
  }

  h1 {
    text-align: center;
    font-size: var(--fs-6);
    margin-block-end: 0.75em;
    line-height: 1.3;
  }

  .post-hero-img {
    background-color: gray;
    margin-block-end: 2em;
    border-radius: 0.35em;
    overflow: hidden;
  }
</style>
