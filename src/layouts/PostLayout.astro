---
import BaseLayout from "./BaseLayout.astro";
import { Image } from "astro:assets";

const { title, description, pubDate, category, imageSrc, imageAlt } =
  Astro.props;
---

<BaseLayout {title} {description}>
  <main class="wrapper">
    <article>
      <h1>{title}</h1>
      <Image
        src={imageSrc}
        alt={imageAlt}
        width={1400}
        quality="high"
        class="shadow"
      />
      <div class="prose">
        <slot />
      </div>
    </article>
    <aside>sidebar area</aside>
  </main>
</BaseLayout>

<style lang="scss">
  main {
    margin-block: 2.5em;
    display: grid;
    gap: 2em;
    @media (min-width: 800px) {
      grid-template-columns: 3fr 1fr;
    }
  }

  article {
    h1 {
      font-size: var(--fs-6);
      margin-block-end: 0.75em;
      line-height: 1.2;
    }

    img {
      background-color: gray;
      margin-block-end: 2em;
      border-radius: 0.35em;
      overflow: hidden;
    }
  }
</style>
